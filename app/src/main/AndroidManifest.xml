<?xml version="1.0" encoding="utf-8"?>
<manifest package="io.keepcoding.tables"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.TablesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_settings"
            android:parentActivityName=".activity.TablesActivity">
        </activity>
        <activity
            android:name=".activity.OrderActivity"
            android:label="@string/title_order"
            android:parentActivityName=".activity.TablesActivity">
        </activity>
        <activity
            android:name=".activity.CoursesActivity"
            android:label="@string/title_courses"
            android:parentActivityName=".activity.CoursesActivity">
        </activity>
        <activity android:name=".activity.EditCourseActivity"
            android:parentActivityName=".activity.OrderActivity">
        </activity>
    </application>

</manifest>