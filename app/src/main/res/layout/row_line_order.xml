<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:padding="5dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/row_line_order_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Calamares" />

    <EditText
        android:id="@+id/row_line_order_units"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:text="1"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/row_line_order_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add"/>
    <ImageButton
        android:id="@+id/row_line_order_decrement_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete"/>

    <TextView
        android:id="@+id/row_line_order_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        tools:text="5â‚¬"/>

    <ImageButton
        android:id="@+id/row_line_order_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_edit"/>
    <ImageButton
        android:id="@+id/row_line_order_delete_line_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete"/>
</LinearLayout>